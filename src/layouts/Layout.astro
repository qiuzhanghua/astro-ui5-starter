---
type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <div>
      <main>
        <!-- Header -->
        <nav>
          <div>
            <a href="/">
              <span>{title}</span>
            </a>
          </div>
        </nav>
        <!-- Content container -->
        <div>
          <slot />
        </div>
        <!-- Footer -->
        <footer>
          <span>
            Built with
            <a href="https://astro.build/">Astro</a>
          </span>
        </footer>
      </main>
    </div>
  </body>
</html>
